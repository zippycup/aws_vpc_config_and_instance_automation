# extra
runcmd:
  - echo "Disable cloud-init after firstrun"
  - chkconfig cloud-init off
  - chkconfig cloud-init.local off
  - chkconfig cloud-config off
  - chkconfig cloud-final off
  - echo "Disable IPV6"
  - sysctl -w net.ipv6.conf.all.disable_ipv6=1
  - sysctl -w net.ipv6.conf.default.disable_ipv6=1
  - echo net.ipv6.conf.all.disable_ipv6 = 1 >> /etc/sysctl.d/80-ipv6.conf
  - echo net.ipv6.conf.default.disable_ipv6 = 1 >> /etc/sysctl.d/80-ipv6.conf
  - echo "Enable Puppet"
  - chkconfig puppet on
